version: '3.7'
services:
  minio1:
    image: minio/minio
    hostname: minio-1
    volumes:
      - {{ MINIO_HOMEVOLUME }}:/export
    ports:
      - 9000:9000
    environment:
      MINIO_ROOT_USER: {{ MINIO_ACCESS_KEY }}
      MINIO_ROOT_PASSWORD: {{ MINIO_SECRET_KEY }}
    command: server /export
    healthcheck:
      test: ["CMD", "curl", "-f", "{{ MINIO_S3URL }}/minio/health/live"]
      interval: 30s
      timeout: 20s
      retries: 3

